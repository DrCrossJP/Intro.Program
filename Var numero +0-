Public class Main {

    public static void main(String[] args) {
       var numeroIf = 5;

       if (numeroIf > 0) {
           System.out.println("es positivo");

       } else if (numeroIf < 0) {
           System.out.println("es negativo");

       } else {
               System.out.println("Es cero");
       }

    }
}
